};
int main()
{
    int p1_score=0,p2_score=0;
    game x;
    int i;
    string player1,player2;
    srand(time(0));
    cout<<"ENTER THE NAME OF FIRST PLAYER :"<<endl;
    cin>>player1;
    cout<<"ENTER THE NAME OF PLAYER 2:"<<endl;
    cin>>player2;
    cout<<"THE POSITION OF PLAYER 1 AND PLAYER 2 IS 0 INITIALLY.."<<endl;
    cin.get();
    while(p1_score<100 && p2_score<100)
    {
        
        cout<<player1<<" It is your turn press any key to play:\n "<<endl;
        cin.get();
        randomfunc(p1_score);
        cout<<"Your score is "<<p1_score<<endl;
        if(p1_score==100)
            break;
        cout<<player2<<" It is your turn press any key to play\n"<<endl;
        cin.get();
        randomfunc(p2_score);
        cout<<"Your score is :"<<p2_score<<endl;
        if(p2_score==100)
            break;
        
    }
    if(p1_score>p2_score)
    {
        cout<<player1<<"is the winner"<<endl;
    }
    if(p2_score>p1_score)
    {
        cout<<player2<<"is the winner"<<endl;
    }
    if(p1_score==p2_score)
    {
        cout<<"Match is draw"<<endl;
    }
}
