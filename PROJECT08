#include<iostream>
#include<ctime>
#include <cstdlib>
#define MAX_NUM 6
using namespace std;

int randomfunc(int &score);
class game
{
public:
    game()
    {
        cout<<endl;
        cout<<endl;
        cout<<"========================================"<<endl;
